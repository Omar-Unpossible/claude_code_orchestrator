# Auto detect text files and perform LF normalization
* text=auto

# Python source files
*.py text eol=lf
*.pyx text eol=lf
*.pyi text eol=lf

# Jinja2 templates
*.j2 text eol=lf

# Shell scripts
*.sh text eol=lf
*.bash text eol=lf

# Configuration files
*.yaml text eol=lf
*.yml text eol=lf
*.json text eol=lf
*.toml text eol=lf
*.ini text eol=lf
*.cfg text eol=lf

# Documentation
*.md text eol=lf
*.rst text eol=lf
*.txt text eol=lf

# SQL files
*.sql text eol=lf

# Git files
.gitignore text eol=lf
.gitattributes text eol=lf

# Exclude files from exporting
.gitattributes export-ignore
.gitignore export-ignore
.git* export-ignore

# Binary files
*.db binary
*.sqlite binary
*.pyc binary
*.pyo binary
*.so binary
*.dll binary
*.dylib binary
*.exe binary
*.pkl binary
*.pickle binary
*.npy binary
*.npz binary
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.zip binary
*.tar binary
*.gz binary
*.bz2binary
*.7z binary
